<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/index.css">

</head>
<body>
  <div class="header">
    <h1>HabitDoc</h1>
    <h2 class="align-right"><%= date %></h2>
  </div>

  <div class="object-row" >
    <div class="object-column" id="sunday">
      <h3 >Sunday</h3>
      <div class="habit-list">
        <% sundayHabits.forEach(function(habit) { %>
          <div class="habit-card">
            <a href="/habit/<%= habit.habit_id %>"><%= habit.habit_name %></a>
          </div>
        <% }); %>
      </div>
    </div>

