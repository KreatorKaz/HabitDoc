            <a href="/habit/<%= habit.habit_id %>"><%= habit.habit_name %></a>
          </div>
        <% }); %>
      </div>
    </div>

    <div class="object-column" id="wednesday">
      <h3 >Wednesday</h3>
      <div class="habit-list">
        <% wednesdayHabits.forEach(function(habit) { %>
          <div class="habit-card">
