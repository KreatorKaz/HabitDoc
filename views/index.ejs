            <a href="/habit/<%= habit.habit_id %>"><%= habit.habit_name %></a>
          </div>
        <% }); %>
      </div>
    </div>

    <div class="object-column" id="tuesday">
      <h3 >Tuesday</h3>
      <div class="habit-list">
        <% tuesdayHabits.forEach(function(habit) { %>
